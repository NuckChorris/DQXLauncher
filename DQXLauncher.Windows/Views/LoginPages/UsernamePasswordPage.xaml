<?xml version="1.0" encoding="utf-8"?>

<Page
    x:Class="DQXLauncher.Windows.Views.LoginPages.UsernamePasswordPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Center" Spacing="10" Margin="10">
        <TextBox x:Name="Username" PlaceholderText="Username"
                 IsEnabled="{x:Bind SubmitLoginCommand.IsRunning, Converter={StaticResource BoolNegationConverter}}" />
        <PasswordBox x:Name="Password" PlaceholderText="Password"
                     IsEnabled="{x:Bind SubmitLoginCommand.IsRunning, Converter={StaticResource BoolNegationConverter}}" />
        <CheckBox Content="Save Password"
                  IsEnabled="{x:Bind SubmitLoginCommand.IsRunning, Converter={StaticResource BoolNegationConverter}}" />
        <Button Command="{x:Bind SubmitLoginCommand}"
                IsEnabled="{x:Bind SubmitLoginCommand.IsRunning, Converter={StaticResource BoolNegationConverter}}">
            Login
        </Button>
    </StackPanel>
</Page>