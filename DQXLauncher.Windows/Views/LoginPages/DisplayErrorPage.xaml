<?xml version="1.0" encoding="utf-8"?>

<Page
    x:Class="DQXLauncher.Windows.Views.LoginPages.DisplayErrorPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="10" Margin="10">
        <Grid>
            <FontIcon FontSize="32" Glyph="&#xf13d;" Foreground="{StaticResource FailureColorBrush}" />
            <FontIcon FontSize="32" Glyph="&#xf138;" Foreground="{StaticResource FailureColorBrush}" />
        </Grid>
        <TextBlock Text="{x:Bind Step.Message}" />
        <Button Click="ButtonBase_OnClick" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal" Spacing="4">
                <FontIcon Glyph="&#xe973;" FontSize="12" />
                <TextBlock>Back</TextBlock>
            </StackPanel>
        </Button>
    </StackPanel>
</Page>